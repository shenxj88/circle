page{
  background:transparent;
}

.go-pubish{
  width: 30px;
  height: 30px;
}
.refresh{
  margin-left: 20rpx;
  width: 30px;
  height: 30px;
}
.item{
  width:100%;
  padding:20rpx 20rpx;
  display: flex;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
}
/* 头像 */
.left{
  width:80rpx;
  margin-right:10rpx;
}
.avatar{
  width:88rpx;
  height:88rpx;
  background-color: #f3f3f3;
}
/* 朋友圈内容 */
.right{
  width:620rpx;
  display:flex;
  flex-direction:column;
}
.nickname{
  font-size:32rpx;
  line-height: 50rpx;
  color: #3b4977;
}
.content{
  font-size:32rpx;
  line-height: 40rpx;
  color: #474952;
  margin-bottom: 10rpx;
}
.image-list{
  display: flex;
  flex-wrap: wrap;
}
.image-list .image{
  width: 160rpx;
  height: 160rpx;
  background-color: #f3f3f3;
  margin:0 10rpx;
}
.time-area{
  display: flex;
  height: 70rpx;
  position: relative;
  align-items: center;
}
.time-area .time{
  font-size: 26rpx;
  line-height: 70rpx;
  color: #696969;
}
.time-area .operation-btn{
  height: 62rpx;
  width: 70rpx;
  position: absolute;
  top:15rpx;
  right: 10rpx;
}
.time-area .operation-pannel{
  position: absolute;
  top: 0rpx;
  right: 80rpx;
  width: 300rpx;
  line-height: 70rpx;
  background-color: #4c5154;
  border-radius: 10rpx;
  font-size:24rpx;
  color: white;
  text-align: center;
}
.time-area .operation-pannel .tab{
   display:inline-block;
   width: 150rpx;
}
.time-area .operation-pannel .tab .image{
  width:26rpx;
  height: 26rpx;
  vertical-align: middle;
  background-color: transparent;
}
/* 点赞评论区域 */
.love-comment{
  margin-top: 10rpx;
  background-color: #f7f7f7f7;
  width: 100%;
}
.love{
  padding: 6rpx 16rpx;
  border-bottom: 1px solid #f0f0f0;
}
.love .love-icon{
  width: 26rpx;
  height: 26rpx;
}
.love .love-nickname{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #3b4977;
}
.comment{
  padding: 6rpx 16rpx;
  padding-bottom: 12rpx;
  font-size: 32rpx;
}
.comment .comment-nickname{
   color: #3b4977;
}
.comment .comment-content{
  color: #181818;
  line-height: 40rpx;
}
/* 评论框 */
.comment-add{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #f3f3f3;
}
.comment-add .comment-input{
  height: 52rpx;
  line-height: 52rpx;
  vertical-align: middle;
  color: #181818;
  margin: 0 20rpx;
  padding: 5rpx 20rpx;
  background-color: #f3f3f3;
  flex-grow: 1;
}
.comment-add .comment-send{
  margin-right: 20rpx;
  font-size: 20rpx;
  padding: 16rpx;
}